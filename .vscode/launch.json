{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "extensionHost",
			"request": "launch",
			"name": "Extension",
			"preLaunchTask": "npm",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceRoot}"
			],
			"sourceMaps": true,
			"outFiles": [ "${workspaceRoot}/out/**/*.js" ]
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Server",
			"cwd": "${workspaceRoot}",
			"program": "${workspaceRoot}/src/stingray-debugger.ts",
			"args": [ "--server=4711" ],
			"sourceMaps": true,
			"outFiles": [ "${workspaceRoot}/out/**/*.js" ]
		},
		{
			"type": "stingray",
			"request": "launch",
			"name": "Stingray Editor",
			"ip": "127.0.0.1",
			"port": 14030
		}
	],
	"compounds": [
		{
			"name": "Extension + Server",
			"configurations": [ "Extension", "Server" ]
		}
	]
}
